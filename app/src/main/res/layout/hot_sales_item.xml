<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <ImageView
            android:id="@+id/black_view"
            android:layout_width="@dimen/dp_147"
            android:layout_height="@dimen/dp_200"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_orange"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@drawable/ellipse"
            android:backgroundTint="@color/orange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/new_item_here"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_12"
            android:gravity="center"
            android:text="@string/new_item"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            app:layout_constraintBottom_toBottomOf="@id/back_orange"
            app:layout_constraintEnd_toEndOf="@id/back_orange"
            app:layout_constraintStart_toStartOf="@id/back_orange"
            app:layout_constraintTop_toTopOf="@id/back_orange" />

        <TextView
            android:id="@+id/name_item"
            android:layout_width="@dimen/dp_140"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_6"
            android:fontFamily="@font/mark"
            android:gravity="center"
            android:lines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_26"
            app:layout_constraintBottom_toBottomOf="@id/black_view"
            app:layout_constraintEnd_toEndOf="@id/black_view"
            app:layout_constraintStart_toStartOf="@id/black_view"
            app:layout_constraintTop_toTopOf="@id/black_view"
            tools:text="Iphone 12" />

        <TextView
            android:id="@+id/super_mega"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_6"
            android:fontFamily="@font/mark"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11"
            app:layout_constraintEnd_toEndOf="@id/black_view"
            app:layout_constraintStart_toStartOf="@id/black_view"
            app:layout_constraintTop_toBottomOf="@id/name_item"
            tools:text="Super" />

        <TextView
            android:id="@+id/button_buy_now"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/ellipse_bottom"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="@string/buy_now"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/black_view"
            app:layout_constraintStart_toStartOf="@id/black_view" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_200"
            app:layout_constraintStart_toEndOf="@id/black_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
